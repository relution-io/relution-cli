{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": false,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "pretty": true,
        "stripInternal": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "typings/main.d.ts"
    ],
    "files": [
        "typings/main.d.ts",
        "src/commands/Command.spec.ts",
        "src/commands/Command.ts",
        "src/commands/Commands.ts",
        "src/commands/home/Home.spec.ts",
        "src/commands/home/Home.ts",
        "src/commands/server/ServerHome.ts",
        "src/commands/SubCommand.ts",
        "src/gii/Gii.spec.ts",
        "src/gii/Gii.ts",
        "src/Tower.spec.ts",
        "src/Tower.ts",
        "src/utility/UserRc.ts"
    ]
}
