{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": false,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "pretty": true,
        "stripInternal": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "typings/main.d.ts"
    ],
    "files": [
        "typings/main.d.ts",
        "src/cli.ts",
        "src/commands/Server.ts",
        "src/commands/server/add.ts",
        "src/commands/Tower.spec.ts",
        "src/commands/Tower.ts",
        "src/gii/Gii.spec.ts",
        "src/gii/Gii.ts",
        "src/utility/Command.spec.ts",
        "src/utility/Command.ts",
        "src/utility/InquirerHelper.ts",
        "src/utility/ReadlineDispatcher.ts",
        "src/utility/ServerModelRc.ts",
        "src/utility/Table.ts",
        "src/utility/UserRc.ts",
        "src/utility/Validator.ts"
    ]
}
